    <!-- begin::Scroll Top -->
    <div id="m_scroll_top" class="m-scroll-top">
        <i class="la la-arrow-up"></i>
    </div>
    <script>
        $(document).ready(function () {
            //if ($.fn.DataTable.isDataTable('#datatable')) {
            //    $("#datatable")
            //}
            $(document.body).on("click", "[data-ajax-modal='true']", function (e) {
                e.stopPropagation();
                e.preventDefault();
                let modal_body_ID = $(this).data("ajax-modal-destination");
                $.get($(this).attr("href"), function (data) {
                    $("#" + modal_body_ID + " .modal-content").html(data);
                    $("#" + modal_body_ID).modal("show");
                });
            });
            $("body").on("submit", "[data-ajax-form='true']", function (e) {
                e.preventDefault();
                let form_url = $(this).attr('action');
                let form_data = $(this).serialize();
                let parent = $(this).parent();

                $.ajax({
                    url: form_url,
                    type: 'POST',
                    data: form_data,
                    success: function (data) {
                        if (data.success) {
                            $("#datatable").DataTable().ajax.reload();
                            $(".modal").modal("hide");
                            toastr.success(data.message);
                        }
                        else {
                            parent.html(data);
                        }
                    }
                })

            });
            $(document.body).on("click", "[data-ajax-delete='true']", function (e) {
                e.preventDefault();
                e.stopPropagation();
                let target_url = $(this).attr("href");
                $.ajax({
                    url: target_url,
                    type: 'POST',
                    success: function (data) {
                        if (data.success) {
                            $("#datatable").DataTable().ajax.reload();
                            toastr.success(data.message);
                        }
                        else {
                            toastr.error(data.message);
                        }
                    }
                });
            });
            $(document.body).on("click", "[data-ajax-active='true']", function (e) {
                e.preventDefault();
                e.stopPropagation();
                $.ajax({
                    url: $(this).attr('href'),
                    type: "POST",
                    success: function (data) {
                        if (data.success) {
                            $("#datatable").DataTable().ajax.reload();
                            toastr.success(data.message);
                        } else {
                            toastr.error(data.message);
                        }
                    }
                });
            });
            $(document.body).on('submit', "[data-ajax-file-form='true']", function (e) {
                e.preventDefault();
                e.stopPropagation();
                var parent = $(this).parent();
                $.ajax({
                    url: $(this).attr('action'),
                    type: "POST",
                    data: new FormData(this),
                    processData: false,
                    contentType: false,
                    success: function (data) {
                        if (data.success) {
                            $("#datatable").DataTable().ajax.reload();
                            $(".modal").modal("hide");
                            toastr.success(data.message);
                        }
                        else {
                            parent.html(data);
                        }
                    },
                });
            });
            toastr.options = {
                "closeButton": false,
                "debug": false,
                "newestOnTop": false,
                "progressBar": false,
                "positionClass": "toast-top-right",
                "preventDuplicates": false,
                "onclick": null,
                "showDuration": "200",
                "hideDuration": "1000",
                "timeOut": "5000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            };
        });

        function DropdownDependencyPOST(sourceID, destinationID, url) {
            $(sourceID).change(function () {
                $.ajax({
                    url: url + $(this).val(),
                    type: "post",
                    success: function (data) {
                        $(destinationID).html("");
                        $.each(data, (index, value) => {
                            $(destinationID).append("<option value=" + value.value + ">" + value.text + "</option>");
                        });
                    }
                });
            });
        }

    </script>
    <!--begin::Base Scripts -->
